# Required Variables - You must provide these values

# OCI Compartment OCID where resources will be created
compartment_id = "ocid1.compartment.oc1..aaaaaaaaXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

# Your SSH public key for accessing the nodes
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-email@example.com"

# Optional Variables - These have defaults but can be customized

# OCI Region (default: eu-frankfurt-1)
# region = "eu-frankfurt-1"

# Kubernetes version (default: v1.32.1)
# kubernetes_version = "v1.32.1"

# Number of worker nodes (default: 2)
# kubernetes_worker_nodes = 2

# VCN Configuration
# vcn_name      = "s6g-k8s-vcn"
# vcn_dns_label = "s6gk8svcn"
# vcn_cidr      = "10.0.0.0/16"

# Subnet Configuration
# private_subnet_cidr = "10.0.1.0/24"
# public_subnet_cidr  = "10.0.0.0/24"

# Cluster Names (all resources will have s6g prefix)
# cluster_name   = "s6g-k8s-cluster"
# node_pool_name = "s6g-k8s-node-pool"

# Node Configuration (within OCI Always Free limits)
# node_memory_gbs = 12  # 12GB per node (24GB total for 2 nodes)
# node_ocpus      = 2   # 2 OCPUs per node (4 OCPUs total for 2 nodes)
# boot_volume_size_gbs = 100

# Kubernetes Network Configuration
# pods_cidr     = "10.244.0.0/16"
# services_cidr = "10.96.0.0/16"